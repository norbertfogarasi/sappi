<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lynxsolutions.intern.sappi.profile.EditProfileFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/images"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:textColor="#353535"
            android:gravity="center"
            android:id="@+id/edit_name_text"
            android:textStyle="bold"
            android:background="@drawable/border_for_profile_textview"
            android:layout_below="@+id/profile_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/email_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:background="@drawable/border_for_profile_textview"
            android:id="@+id/edit_email_text"
            android:layout_marginTop="38dp"
            android:layout_below="@+id/edit_name_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/smartphone_icon"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:background="@drawable/border_for_profile_textview"
            android:id="@+id/edit_mobile_text"
            android:layout_below="@+id/edit_email_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/facebook_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textStyle="italic"
            android:paddingTop="10dp"
            android:textSize="14sp"
            android:paddingBottom="10dp"
            android:background="@drawable/border_for_profile_textview"
            android:id="@+id/edit_facebook_text"
            android:layout_below="@+id/edit_mobile_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/save_button_text"
            android:background="@drawable/edit_button_profile"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:id="@+id/save_profile_button"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/edit_facebook_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</FrameLayout>
