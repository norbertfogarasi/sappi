<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lynxsolutions.intern.sappi.profile.EditProfileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <com.lynxsolutions.intern.sappi.profile.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:civ_border_width="12dp"
                android:clickable="true"
                android:src="@drawable/images"
                app:civ_border_color="#E89F02"
                app:civ_second_fill_color="#484848"
                app:civ_second_border_width="9dp"
                android:layout_marginTop="23dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:textColor="#353535"
                android:gravity="center"
                android:id="@+id/edit_name_text"
                android:textStyle="bold"
                android:background="@drawable/border_for_profile_textview"
                android:layout_below="@+id/profile_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/email_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textStyle="bold"
                android:background="@drawable/border_for_profile_textview"
                android:id="@+id/edit_email_text"
                android:layout_below="@+id/edit_name_text"
                android:layout_alignParentStart="true"
                android:layout_marginTop="34dp" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/smartphone_icon"
                android:drawablePadding="10dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textStyle="bold"
                android:background="@drawable/border_for_profile_textview"
                android:id="@+id/edit_mobile_text"
                android:layout_below="@+id/edit_email_text"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/facebook_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textStyle="italic"
                android:paddingTop="10dp"
                android:textSize="14sp"
                android:paddingBottom="10dp"
                android:background="@drawable/border_for_profile_textview"
                android:id="@+id/edit_facebook_text"
                android:layout_below="@+id/edit_mobile_text"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/save_button_text"
                android:background="@drawable/edit_button_profile"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:id="@+id/save_profile_button"
                android:layout_marginTop="27dp"
                android:layout_below="@+id/edit_facebook_text"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
